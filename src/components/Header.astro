---
// src/components/Header.astro
import { useTranslations } from '../i18n/ui';
import { getLangFromUrl } from '../i18n/ui';
import LanguageSwitcher from './LanguageSwitcher.astro';

const { url } = Astro;
const lang = getLangFromUrl(url);
const t = useTranslations(lang);

const brandName = "GM Shrek";
---

<header>
  <nav>
    <a href={`/${lang}`} class="brand">{brandName}</a>
    <div class="nav-container">
      <ul class="nav-links">
        <li><a href={`/${lang}`}>{t('nav.home')}</a></li>
        <li class="dropdown">
          {/* 父元素 */}
          <a href="#">{t('nav.products')}</a>
          {/* 这个 a 标签本身不应该控制显示，而是父 li:hover 控制 */}
          <ul class="dropdown-menu">
            {/* 下拉菜单 */}
            <li><a href={`/${lang}/products/omnireader/info`}>{t('products.omnireader')}</a></li>
            <li><a href={`/${lang}/products/mouseboost/info`}>{t('products.mouseboost')}</a></li>
            <li><a href={`/${lang}/products/omnizip/info`}>{t('products.omnizip')}</a></li>
            <li><a href={`/${lang}/products/omniconverter/info`}>{t('products.omniconverter')}</a></li>
            <li><a href={`/${lang}/products/cognipdf/info`}>{t('products.cognipdf')}</a></li>
            <li><a href={`/${lang}/products/textreader/info`}>{t('products.textreader')}</a></li>
          </ul>
        </li>
        <li class="dropdown">
          {/* 父元素 */}
          <a href="#">{t('nav.faq')}</a>
          {/* 这个 a 标签本身不应该控制显示，而是父 li:hover 控制 */}
          <ul class="dropdown-menu">
            {/* 下拉菜单 */}
            <!-- <li><a href={`/${lang}/products/omnireader/faq`}>{t('products.omnireader')}</a></li> -->
            <li><a href={`/${lang}/products/mouseboost/faq`}>{t('products.mouseboost')}</a></li>
            <!-- <li><a href={`/${lang}/products/omnizip/faq`}>{t('products.omnizip')}</a></li>
            <li><a href={`/${lang}/products/omniconverter/faq`}>{t('products.omniconverter')}</a></li>
            <li><a href={`/${lang}/products/cognipdf/faq`}>{t('products.cognipdf')}</a></li>
            <li><a href={`/${lang}/products/textreader/faq`}>{t('products.textreader')}</a></li> -->
          </ul>
        </li>
        <li><a href={`/${lang}/feedback`}>{t('nav.feedback')}</a></li>
      </ul>
    </div>
    <div class="language-switcher">
      <LanguageSwitcher />
    </div>
  </nav>
</header>

<style>
  header {
    background-color: #fff;
    border-bottom: 1px solid #e9ecef;
    padding: 1rem 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  nav {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
  }
  .brand {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    color: #9b89f3;
  }
  .nav-container {
    display: flex;
    align-items: center;
    position: relative;
    max-width: 600px;
  }
  .nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  .nav-links > li a {
    text-decoration: none;
    color: #555;
    font-weight: 500;
    display: block;
    padding: 0.5rem;
    transition: color 0.2s;
  }
  .nav-links > li a:hover {
    color: #007bff;
  }
  .dropdown {
    position: relative;
  }
  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) scale(1);
    background: #fff;
    box-shadow: 0 2px 12px 0 rgba(0,0,0,0.1);
    z-index: 20;
    min-width: 180px;
    padding: 6px 0;
    list-style: none;
    margin: 0;
    border-radius: 4px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.18s cubic-bezier(.4,0,.2,1), transform 0.18s cubic-bezier(.4,0,.2,1);
  }
  .dropdown:hover .dropdown-menu,
  .dropdown:focus-within .dropdown-menu {
    display: block;
    opacity: 1;
    pointer-events: auto;
    transform: translateX(-50%) scale(1);
  }
  .dropdown-menu li {
    padding: 0;
    width: 100%;
    display: block;
    border-bottom: 1px solid #f0f0f0;
  }
  .dropdown-menu li:last-child {
    border-bottom: none;
  }
  .dropdown-menu li a {
    display: flex;
    align-items: center;
    padding: 0 20px;
    height: 36px;
    color: #333;
    text-decoration: none;
    white-space: nowrap;
    font-weight: 400;
    font-size: 15px;
    width: 100%;
    border-radius: 4px;
    text-align: left;
    transition: background 0.18s, color 0.18s;
  }
  .dropdown-menu li a:hover, .dropdown-menu li a:focus {
    background: #f5f7fa;
    color: #409EFF;
  }
  .language-switcher {
    position: absolute;
    right: 15px;
    display: flex;
    align-items: center;
  }
</style>
