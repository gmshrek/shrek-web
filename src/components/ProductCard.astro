---
// src/components/ProductCard.astro
export interface Props {
  name: string;
  icon: string;
  tagline: string;
  url: string;
  appStoreUrl: string;
}
const { name, icon, tagline, url, appStoreUrl } = Astro.props;
---

<div class="product-card">
  <img src={icon} alt={`${name} icon`} class="product-icon" />
  <h3>{name}</h3>
  <p>{tagline}</p>
  <div class="card-actions">
    <a href={url} class="learn-more">Learn More</a>
    {
      appStoreUrl && ( // 仅当链接有效时显示
        <a
          href={appStoreUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="app-store-link"
        >
          <svg
            width="100%"
            height="48"
            viewBox="0 0 160 48"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect width="160" height="48" rx="12" fill="#000" />
            <g>
              <svg x="16" y="10" width="28" height="28" viewBox="0 0 28 28">
                <path
                  d="M19.7 14.6c0-3.1 2.5-4.6 2.6-4.7-1.4-2-3.6-2.3-4.4-2.3-1.9-.2-3.7 1.1-4.7 1.1-1 0-2.5-1.1-4.1-1.1-2.1 0-4 1.2-5.1 3.1-2.2 3.8-.6 9.4 1.6 12.5 1.1 1.6 2.4 3.3 4.1 3.2 1.6-.1 2.2-1 4.1-1 1.9 0 2.4.9 4.1 1 1.7.1 2.8-1.6 3.9-3.2.7-1 1-2 1.1-2.1-.1 0-2.6-1-2.6-4.1z"
                  fill="#fff"
                />
                <path
                  d="M16.7 7.2c.8-1 1.3-2.3 1.1-3.6-1.1.1-2.4.7-3.1 1.6-.7.8-1.3 2.2-1.1 3.5 1.2.1 2.4-.6 3.1-1.5z"
                  fill="#fff"
                />
              </svg>
              <text
                x="52"
                y="20"
                fill="#fff"
                font-size="10"
                font-family="Arial, Helvetica, sans-serif"
                font-weight="400"
              >
                Download on the
              </text>
              <text
                x="52"
                y="36"
                fill="#fff"
                font-size="18"
                font-family="Arial, Helvetica, sans-serif"
                font-weight="700"
              >
                App Store
              </text>
            </g>
          </svg>
        </a>
      )
    }
  </div>
</div>

<style>
  .product-card {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border: none;
    border-radius: 16px;
    padding: 2rem 1.5rem 1.5rem 1.5rem;
    text-align: center;
    box-shadow: 0 4px 24px 0 rgba(60,60,120,0.08);
    transition: transform 0.18s, box-shadow 0.18s;
    width: 100%;
    max-width: 340px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    position: relative;
    overflow: hidden;
  }
  .product-card:hover {
    transform: translateY(-6px) scale(1.025);
    box-shadow: 0 8px 32px 0 rgba(60,60,120,0.13);
  }
  .product-icon {
    width: 120px;
    height: 120px;
    object-fit: contain;
  }
  .product-card h3 {
    font-size: 1.35rem;
    margin-bottom: 0.3rem;
    color: #222;
    font-weight: 700;
    letter-spacing: 0.01em;
  }
  .product-card p {
    font-size: 1rem;
    color: #555;
    margin-bottom: 1.5rem;
    flex-grow: 1;
    line-height: 1.6;
  }
  .card-actions {
    margin-top: auto;
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
    align-items: center;
    width: 100%;
  }
  .learn-more {
    background: #fff;
    color: #409EFF;
    border: 1.5px solid #e0e7ef;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    padding: 0.7rem 0;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 0.2rem;
    transition: background 0.18s, color 0.18s, border 0.18s;
    box-shadow: 0 1px 2px 0 rgba(60,60,120,0.04);
  }
  .learn-more:hover {
    background: #f0f7ff;
    color: #1769c2;
    border-color: #b6d4fe;
  }
  .app-store-link {
    width: 100%;
    display: block;
    border: none;
    padding: 0;
    margin: 0;
    background: none;
  }
  .app-store-link svg {
    width: 100%;
    height: 44px;
    display: block;
    margin: 0 auto;
    border-radius: 8px;
  }
</style>
